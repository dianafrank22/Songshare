<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title></title>
	<link rel="stylesheet" href="">
</head>
<body>



<div class="row">

   <div class="col-md-6">
     <% @user.each do |user| %>
     <h1 class="username"> <%= user.username %></h1>
     <img class="user_image" src = "<%= user.image %> "/>
        <%= render :partial => "followers/form"%>
   </div>


  
  <div class="col-md-6">
    <div class = "users_alltime">
      <h3> <%= user.username %>'s All Time Favorite Artists Are </h3>
        
        <div class = 'top5'>
          <% @new.each do |top| %>
          <li><%= top.gsub(/[^a-zA-Z0-9\s\-]/,"")%></li>
          <%end%>
        </div>     
    </div>
  </div>
</div>

<div class ='row'>
    <h3 class="current_title"> <%= user.username %> Is Currently Listening To: </h3>
        
        <% @current_favs.each do |fav| %>
        <div class="col-md-4">
          <div class="favorites">
            
            <h3> <%= fav.title %> <%= fav.artist %> </h3>
            <iframe src="https://embed.spotify.com/?uri=<%=fav.uri%>" width="300" height="80" frameborder="0" allowtransparency="true"></iframe>   
          </div> 
          
        </div>
        <%end%> 
       <%end%>
       </div>
    
  




</body>
</html>


<script src="/assets/follow.js" type="text/javascript"></script>
